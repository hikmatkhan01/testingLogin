package java2intor;

import java.util.ArrayList;

public class javaPrictice {

	public static void main(String[] args) {
		// TODO Auto-generated method stub	
		
		
        int[] arr= {1,2,3,6,8,9,10,122,55};	
        for(int a=0; a<=8;a++)
        {
        	if(arr[a] % 2 == 0)
        	{
        		System.out.print("divided by 2 = "+arr[a]+"\n");
        	}	
        	else
        	{
        		System.out.print("\n Not divided  "+arr[a]+"\n");	
        	}
        
        	
        }
        
        int[] numbers = {10, 20, 30, 40, 50};

        // Use a for loop to print the first and last elements
        for (int i = 0; i < numbers.length; i++) {
            // Print the first element
            if (i == 0) {
                System.out.println("The first element is: " + numbers[i]);
            }
            // Print the last element
            if (i == numbers.length - 1) {
                System.out.println("The last element is: " + numbers[i]);
                System.out.print("length of Array == "+ numbers.length);
            }
        }
        
        ArrayList a = new ArrayList();
         a.add("Mikhel");
         a.add("Hikmat");
         a.add("khan");
         a.add("Imran");
         for(int i=0; i<a.size(); i++)
         {
        	  System.out.print("\n  "+a.get(3)); 
         }
       
        
	
	}

}
